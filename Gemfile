# testing frameworks
group :test, :development do
  gem 'rspec-rails', '~> 2.0'
  gem 'shoulda-matchers'
  gem 'cucumber-rails', :require => false
  gem 'launchy'
  gem 'database_cleaner'
  gem 'webrat'
  gem 'simplecov'
end

# server, deployment
group :test, :development do
  gem 'thin'
end
group :development do
  gem 'capistrano'
end

