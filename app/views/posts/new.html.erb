<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @post %>
  <%= f.input :title, input_html: { class: 'input-block-level' } %>
  <%= f.input :content, input_html: { class: 'input-block-level tinymce' }, required: false %>
  <%= f.button :submit %>
<% end %>
<%= tinymce %>