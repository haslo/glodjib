.form-inputs
  = f.error_notification
  = display_base_errors post
  = f.hidden_field :is_page
  = f.input :title, :input_html => { :class => 'input-block-level' }, :required => false
  - unless post.is_page?
    = f.input :tags, :input_html => { :class => 'input-block-level' }
  = f.input :content, :input_html => { :class => 'input-block-level tinymce', :rows => 15 }, :required => false
:javascript
  tinyMCE.init({
    mode: 'textareas',
    theme: 'modern',
    plugins: 'code,link,textcolor',
    toolbar: 'undo redo | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | forecolor backcolor | link unlink code'
  });
