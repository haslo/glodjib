= render 'tabs'
%table.table.table-striped.table-bordered.table-condensed
  %tr
    %tr
      %th= t('.tag_name')
      %th= t('.reset_time')
      %th= t('.actions')
  - all_caches.each do |flickr_cache|
    - tag_name = flickr_cache.flickr_tag.tag_name
    %tr
      %td= tag_name
      %td= time_ago_in_words(flickr_cache.updated_at)
      %td= link_to(t('.reset_cache', :tag_name => tag_name), reset_caches_settings_path(:tag => tag_name), :method => :delete)

%p= link_to(t('.destroy_caches'), destroy_caches_settings_path, :method => :delete)
