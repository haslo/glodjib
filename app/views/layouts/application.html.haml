!!!
%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title
      = [t("titles.#{controller.controller_name}.#{controller.action_name}", :title_parameter => @title_parameter), Setting.page_title].join(' - ')
    = javascript_include_tag('//use.typekit.net/ubz0eup.js')
    :javascript
      Typekit.load();
    = stylesheet_link_tag('application', :media => 'all')
    = javascript_include_tag('application')
    = auto_discovery_link_tag(:atom, '/feed')
    = csrf_meta_tags
    = yield(:head)

  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner.glodjib-nav
        .container
          = render('layouts/navigation')

    .main{:role => 'main'}
      .container
        .content
          .row
            .col-md-12
              %h2
                = link_to(t("titles.#{controller.controller_name}.#{controller.action_name}", :title_parameter => @title_parameter), params)
              = render('layouts/messages')
              = yield
          %footer.navbar.navbar-fixed-bottom
            = t('notices.footer')
            = '-'
            - if user_signed_in?
              = link_to(t('navigation.admin'), settings_path)
              = '-'
              = link_to(t('navigation.logout'), destroy_user_session_path, :method => :delete)
            - else
              = link_to(t('navigation.login'), new_user_session_path)
